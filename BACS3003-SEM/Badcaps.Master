    <script>
        const scrollToTopButton = document.getElementById('js-top');

        const scrollFunc = () => {
            let y = window.scrollY;

            if (y > 0) {
                scrollToTopButton.className = "fixed right-5 bottom-5 cursor-pointer inline-flex justify-center items-center rounded-full shadow-md w-12 h-12 z-30 border-2 border-gray-600 bg-white text-gray-600 hover:text-blue-600 hover:text-gray-700 transform hover:scale-90 transition ease-in-out duration-300 visible opacity-100";
            } else {
                scrollToTopButton.className = "fixed right-5 bottom-5 cursor-pointer inline-flex justify-center items-center rounded-full shadow-md w-12 h-12 z-30 border-2 border-gray-600 bg-white text-gray-600 hover:text-blue-600 hover:text-gray-700 transform hover:scale-90 transition ease-in-out duration-300 invisible opacity-0";
            }
        };

        window.addEventListener("scroll", scrollFunc);

        const scrollToTop = () => {
            const c = document.documentElement.scrollTop || document.body.scrollTop;

            if (c > 0) {
                window.requestAnimationFrame(scrollToTop);
                window.scrollTo(0, c - c / 10);
            }
        };

        scrollToTopButton.onclick = function (e) {
            e.preventDefault();
            scrollToTop();
        }
    </script>
